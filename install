#!/usr/bin/env bash
#
# Run all dotfiles installers.

set -e

# Install OS specific code
while true; do
  read -p "What operating system are you on (osx, ubuntu)? " os
  case $os in
    "osx" ) echo "bootstrapping osx..."; sh osx/bootstrap; break;;
    "ubuntu" ) echo "bootstrapping ubuntu..."; sh ubuntu/bootstrap; break;;
    * ) echo "please enter a valid operating system"
  esac
done

# find the installers and run them iteratively
find . -name install.sh | while read installer ; do sh -c "${installer}" ; done
